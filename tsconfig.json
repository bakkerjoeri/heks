{
	"compilerOptions": {
		"strict": true,
		"moduleResolution": "node",
		"target": "es2020",
		"module": "ESNext",
		"lib": ["es2020", "dom", "dom.iterable", "scripthost"],
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"ts-node": {
		"esm": true
	}
}
